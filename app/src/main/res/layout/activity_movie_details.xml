<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.rulebreaker.tmdb.MovieDetails"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:elevation="@dimen/cardviewelevation"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:id="@+id/BackButtonToolbar"
        app:theme="@style/ToolBarStyle"
        app:navigationIcon="@drawable/ic_chevron_left"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.7"
                android:id="@+id/movieLayout"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:layout_width="130dip"
                    android:elevation="@dimen/cardviewelevation"
                    android:layout_marginTop="@dimen/moviePosterMargin"
                    android:layout_height="190dip"
                    android:alpha="0.9"
                    android:clickable="true"
                    android:id="@+id/trailer"
                    android:layout_centerHorizontal="true"
                    android:background="@color/colorAccent"
                    >
                    <ImageView
                        android:layout_width="125dip"
                        android:layout_height="185dip"
                        android:layout_margin="2.5dip"
                        android:id="@+id/moviePoster"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:alpha="0.9"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:textSize="10dip"
                        android:padding="2dip"
                        android:layout_margin="@dimen/margins"
                        android:background="@drawable/circular"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/certificate"/>
                    <ImageView
                        android:background="@drawable/ic_play_circle_outline"
                        android:layout_width="70dip"
                        android:alpha="1"
                        android:layout_height="70dip"
                        android:layout_centerInParent="true"

                        />
                </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/movieDetailMarginTop"
                    app:cardCornerRadius="@dimen/cardviewcornerradius"
                    android:layout_marginLeft="@dimen/movieDetailMarginLeftRight"
                    android:layout_marginRight="@dimen/movieDetailMarginLeftRight"
                    android:layout_marginBottom="@dimen/margins"
                    android:background="#fbffffff"
                    android:alpha=".8"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="140dip"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="@dimen/movieDetailTitleSize"
                            android:id="@+id/movieDetail"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:alpha="0.7"
                            android:textSize="@dimen/movietitletextsize"
                            android:id="@+id/movie_tagline"
                            android:textStyle="italic"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margins"
                            android:paddingRight="@dimen/margins"
                            android:textAlignment="center"
                            android:textStyle="italic"
                            android:alpha="0.9"
                            android:textSize="@dimen/movietitletextsize"
                            android:id="@+id/genre"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:alpha="0.7"
                            android:textSize="@dimen/movietitletextsize"
                            android:id="@+id/popularity"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margins"
                            android:paddingRight="@dimen/margins"
                            android:alpha="0.9"
                            android:textSize="@dimen/movietitletextsize"
                            android:id="@+id/website"
                            android:autoLink="web"
                            android:textColorLink="#f2841313"
                            android:textStyle="italic"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margins"
                            android:alpha="0.9"
                            android:textSize="@dimen/movietitletextsize"
                            android:id="@+id/releaseDate"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margins"
                            android:alpha="0.9"
                            android:textStyle="italic"
                            android:textSize="@dimen/movietitletextsize"
                            android:id="@+id/budget"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margins"
                            android:alpha="0.9"
                            android:textStyle="italic"
                            android:textSize="@dimen/movietitletextsize"
                            android:id="@+id/revenue"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margins"
                            android:alpha="0.9"
                            android:textSize="@dimen/movietitletextsize"
                            android:id="@+id/runtime"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margins"
                            android:paddingRight="@dimen/margins"
                            android:alpha="0.8"
                            android:textStyle="italic"
                            android:textSize="@dimen/movietitletextsize"
                            android:id="@+id/production"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margins"
                            android:paddingRight="@dimen/margins"
                            android:paddingBottom="@dimen/margins"
                            android:alpha="0.9"
                            android:textStyle="bold"
                            android:textSize="@dimen/movietitletextsize"
                            android:id="@+id/details"
                            android:textColor="#f70d0d"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>
